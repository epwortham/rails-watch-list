<div class="container">
  <h3 class="font-effect-neon" style="padding: 40px" align="center"><font color="white">Let's make a new list!</font></h3>
  <div class="form" style="padding-bottom: 100px">
    <%= simple_form_for(@list) do |f| %>
      <%= f.input :name, label: "List name!" %>
      <%= f.input :photo, label: "Pick a photo for your list!", as: :file %>
      <%= f.submit "Add it!", class: 'btn btn-default mt-2' %>
    <% end %>
  </div>
  <p><%= link_to 'Back', root_path %></p>
</div>

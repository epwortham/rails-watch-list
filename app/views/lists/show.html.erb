<div class="container">
  <div class="show-card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key %>')">
    <h1><%= @list.name %></h1>
  </div>
  <div class="mb-2">
    <%= link_to 'add movie', new_list_bookmark_path(@list), class: 'btn btn-default btn-block mt-2' %>
  </div>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-12 col-sm-6 col-md-4">
        <div class="card-trip">
          <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, class: 'movie-img rounded-top', height: 400, width: 200, crop: :fill %>
          <div class="card-trip-infos">
            <div>
              <h2><%= bookmark.movie.title %></h2>
              <h6><%= bookmark.comment %></h6>
              <p>Overview: <%= bookmark.movie.overview %></p>
            </div>
            <h5 class="card-trip-user avatar-square"><%= bookmark.movie.rating %></h5>
            <p class="card-trip-pricing"><%= link_to 'delete', list_bookmark_path(bookmark), class: 'btn btn-danger btn-sm mt-2', method: :delete, data: { confirm: "Are you sure you want to remove #{bookmark.movie.title} from your #{@list.name} list" } %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <p><%= link_to 'Back', root_path %></p>
</div>

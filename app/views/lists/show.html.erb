<div class="container mt-5">
  <h1><%= @list.name %></h1>
  <div class="mb-5">
    <%= link_to 'add movie', new_list_bookmark_path(@list), class: 'btn btn-primary btn mt-2' %>
  </div>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-12 col-sm-6 col-md-4">
        <h3><%= bookmark.movie.title %></h3>
        <p><%= bookmark.comment %></p>
        <p><%= link_to 'delete', list_bookmark_path(bookmark), class: 'btn btn-warning btn-sm mt-2', method: :delete, data: { confirm: "Are you sure you want to remove #{bookmark.movie.title} from your #{@list.name} list" } %></p>
      </div>
    <% end %>
  </div>
  <p><%= link_to 'Back', lists_path %></p>
</div>

<div class="container">
  <h3 class="font-effect-neon" align="center"><font color="white">What movies do you want to add?</font></h3>
  <div class="form" style="padding-bottom: 100px">
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.association :movie %>
      <%= f.input :comment %>
      <%= f.submit 'Add it!', class: 'btn btn-default mt-2' %>
    <% end %>
  </div>
  <p><%= link_to 'Back', root_path %></p>
</div>
